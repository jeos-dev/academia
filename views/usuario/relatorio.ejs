<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <%- include('../partials/cabecalho.ejs') %>

    <% if (status == "1") { %>
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"  ></button>
            Cadastrado com <b>sucesso.</b> </div>
    <% } %>

    <% if (status == "2") { %>
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            Usuario removido com<b> sucesso!</b> </div>
    <% } %>
     
    <h2>Relatório de Usuários</h2>
<table class="table table-striped">
    <thead>
        <th>Email</th>
        <th>Nome</th>
        <th>Detalhar</th>
        <th>Atualizar</th>
        <th>Excluir</th>
        
    </thead>
    <% usuarios.forEach(usuario =>{%>
    <tr>
        <td><%=usuario.email%></td>
        <td><%=usuario.nome%></td>
        <td><a href="/usuarios/<%=usuario._id%>" class="btn btn-info">Detalhar</a></td>
        <td><a href="/usuarios/atualizar/<%= usuario._id %>"class="btn btn-warning">Atualizar</a></td>
        <td><a href="/usuarios/excluir/<%= usuario._id %>"class="btn btn-danger" onclick="return confirm ('Deseja remover o usuario ? ')">Excluir</a></td>
        
    </tr>
    <% }) %>
    <%- include("../partials/rodape.ejs") %>
    
</body>
</html>